{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "baseUrl": "./src",
    "keyofStringsOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "outDir": "./dist/pkg",
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**", "**/test-helpers/**", "**/tester/**"]
}
